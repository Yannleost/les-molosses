 
<div class="container">

  <h3> Mes param√®tres </h3>
  <br>

  <div class="form-edit">
  
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>


    <div class="form-edit-avatar">

     <div class="edit-avatar-actuelle">
       <h5 id="label-avatar"> Photo  </h5>
       <% if current_user.avatar %>
       <%= cl_image_tag current_user.avatar_url, class: "edit-avatar" %>
       <% else %>
       <%= image_tag "avatar.png", alt:"logo", class: "edit-avatar" %>
       <% end %>
     </div>
    
    <div class="edit-avatar-changement">
      <%= f.input :avatar, required: false, autofocus: true, label: false%>
      <%= f.input :avatar_cache, as: :hidden %>
    </div>
    
    </div>

    <div class="noms-edit">
    <%= f.input :first_name, required: false, autofocus: true %>
    <%= f.input :last_name, required: false, autofocus: true %>
    </div>
    <div class="email-edit">
    <%= f.input :email, required: true, autofocus: true %>
    </div>
     

  <div class="form-actions">
   <div class="btn-form-new btn btn-warning"> <%= f.button :submit, "modifier" %> </div>
  </div>
  <% end %>

  <h5>Supprimer mon compte :</h5>

  <p>Vous souhaitez nous quitter ? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>

  </div>
</div>

