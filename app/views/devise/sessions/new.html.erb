<div class="container">

  <br>
  <br>

  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 ">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

       <div class="row head-form-user-grey">
          <div class="col-sm-6 titre-form ">Connectez-vous</div>
        </div>

       <div class="row bg-grey">
          <div class="col-sm-4">
          <%= f.input :email, required: false, autofocus: true %>
          </div>
       </div>

       <div class="row bg-grey">
          <div class="col-sm-4">
           <%= f.input :password, required: false %>
           </div>
      </div>

      <div class="row">
         <div class="col-sm-4">
         <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
      </div>

       <div class="row">
          <div class="col-sm-4">
          <%= f.button :button, "Connexion", type: :submit, class: :'btn-new-session-form' %>
          </div>
      </div>
        <% end %>
     <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
