<div class="container">

   <div class="banner2" style="background-image: url('<%= asset_path'Chien.landing.jpg'%>');">
    <div class="banner-content">
      <h1> Une communautÃ© qui partage une passion </h1>
      <div class="search-index2">
          <div class= "search-bar">
          <%= form_tag index_search_path, method: :get do %>
          <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Chercher un expert !" %>
           </div>
              <button class="btn-search-index2"></button>
            <% end %>
      </div>
    </div>
  </div>

  <div class="row">
          <% @users.each do |user| %>
        <div class="col-xs-12 col-sm-3 col-md-3">
           <div class="card">
              <div class="card-head">
                 <% if user.avatar_url %>
                <%= link_to cl_image_tag(user.avatar_url, class:"card-image"), showprofile_path(user)%>
                <% else %>
                  <%= link_to image_tag("avatar.png", alt:"logo", class:"card-image"), showprofile_path(user) %>
                <% end %>
                <%= user.email %>
            </div>
           </div>
        </div>
      <% end %>
  </div>



