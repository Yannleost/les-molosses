
<div class="container">

  <div class="banner2" style="background-image: url('<%= asset_path'chiens-heureux-jouent-a-deux-full-13651707.jpg'%>');">
    <div class="banner-content">
      <h1> Les perles rares </h1>
      <div class="search-index2">
          <div class= "search-bar">
          <%= form_tag index_search_path, method: :get do %>
          <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Chercher un chien par son pédigrée !" %>
           </div>
              <button class="btn-search-index2"></button>
            <% end %>
      </div>
    </div>
  </div>

    <br>

  <div class="index2">

   <div class="container-card row">
      <% @dogs.each do |dog| %>
        <div class="col-xs-12 col-md-6">
          <% if dog.picture_url  %>
          <div class="card">
          <div class="card-image"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path dog.picture, height: 300, width: 400, crop: :fill %>')">
            <div class="card-description"><h2><%= link_to dog.nickname, dog_path(dog) %>  </h2>
               <% if dog.user.avatar_url %>
                <%= cl_image_tag dog.user.avatar_url, class: "card-user" %>
              <% else %>
               <%= image_tag "avatar.png", alt:"logo", class:"card-user"%>
               <% end %>
            </div>

          <div class="card-footer">
            <p>Dogs booked : <%= dog.bookings.count %> times </p>
            <p><%= dog.price %>€ / saillie</p>
         </div>
         </div>
        </div>
            <!-- <a class="card-link" href="#" ></a> -->
         <% else %>
           <div class="card">
            <div class="card-image"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= asset_path'dog.png', height: 300, width: 400, crop: :scale %>')">
              <div class="card-description"><h2><%= link_to dog.nickname, dog_path(dog) %></h2>
              <% if dog.user.avatar_url %>
                <%= cl_image_tag dog.user.avatar.default_url, class: "card-user" %>
              <% else %>
               <%= image_tag "avatar.png", alt:"logo", class:"card-user"%>
               <% end %>
              </div>

             <div class="card-footer">
              <p> Dogs booked : <%= dog.bookings.count %> times </p>
              <p><%= dog.price %>€</p>

             </div >
            </div>
          </div>
         <% end %>
        </div>
      <% end %>
    </div>
        <div
        id="map"
        style="width: 30%;
        height: 700px;
        margin-left: 15px;
        margin-right: 0px;
        margin-top: 19px;"
        data-markers="<%= @markers.to_json %>">
       </div>
   </div>
  </div>
