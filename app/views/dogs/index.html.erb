
<div class="container">

	<div class="banner" style="background-image: url('<%= asset_path'Chien.landing.jpg', height: 200, width: 300%>');">
	  <div class="banner-content">
	    <h1>L'AMOUR AVEC UN GRAND OUAF</h1>

	    <%= link_to "INSCRIRE SON MOLOSSE", new_dog_path, class: "big-button btn btn-reverse btn-warning"%>
      <div class="search-index2">
      <div class= "search-bar">
      <%= form_tag index_search_path, method: :get do %>
		  <%= text_field_tag :query,
   			 	params[:query],
    			class: "form-control",
    			placeholder: "Chercher un chien par son pédigrée !" %>
       </div>
          <button class="btn-search-index2"> </button>
			   <% end %>
	    </div>
    </div>
	</div>

  <div class="row">

     <% @dogs.each do |dog| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <% if dog.picture_url  %>
          <div class="card">
            <div class="card-image"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= cl_image_path dog.picture, height: 300, width: 400, crop: :fill %>')">
               <div class="card-head"><h2><%= link_to dog.nickname, dog_path(dog) %> </h2>
               <% if dog.user.avatar_url %>
                <%= cl_image_tag dog.user.avatar_url, class: "card-user" %>
               <% else %>
               <%= image_tag "avatar.png", alt:"logo", class:"card-user"%>
               <% end %>
            </div>

            <div class="card-description">
                  <div class="card-description-breed"><%= dog.breed %> - </div>
                  <div class="card-description-version"><%= dog.version %> - </div>
                 <div class="card-description-color"> <%= dog.color %></div>
            </div>

            <div class="card-footer">
                 <div class="card-footer-times">
                 <p>Dogs booked : <%= dog.bookings.count %> times</p>
                 </div>
                 <div class="card-footer-price">
                 <%= dog.price%>€ / Saillie
                </div>
          </div>
         </div>
        </div>
            <!-- <a class="card-link" href="#" ></a> -->
         <% else %>
           <div class="card">

            <div class="card-image"
            style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
            url('<%= asset_path'dog.png', height: 300, width: 400, crop: :scale %>')">
              <div class="card-head"><h2><%= link_to dog.nickname, dog_path(dog) %></h2>
              <% if dog.user.avatar_url %>
                <%= cl_image_tag dog.user.avatar.default_url, class: "card-user" %>
              <% else %>
               <%= image_tag "avatar.png", alt:"logo", class:"card-user"%>
               <% end %>
              </div>

                <div class="card-description">
                  <div class="card-description-breed"><%= dog.breed %> - </div>
                  <div class="card-description-version"><%= dog.version %> - </div>
                 <div class="card-description-color"> <%= dog.color %></div>
                </div>

                <div class="card-footer">
                 <div class="card-footer-times">
                 <p>Dogs booked : <%= dog.bookings.count %> times</p>
                 </div>
                 <div class="card-footer-price">
                 <%= dog.price %>€ / Saillie
                </div>
          </div>
             </div>
            </div>
         <% end %>
        </div>
      <% end %>

    </div>
<div> <%= paginate @dogs%> </div>
  </div>


