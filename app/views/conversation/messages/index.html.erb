<p id="notice"><%= notice %></p>

<h1>Conversation Messages</h1>

<table>
  <thead>
    <tr>
      <th>Conversation</th>
      <th>Sender</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conversation_messages.each do |conversation_message| %>
      <tr>
        <td><%= conversation_message.conversation %></td>
        <td><%= conversation_message.sender %></td>
        <td><%= conversation_message.content %></td>
        <td><%= link_to 'Show', conversation_message %></td>
        <td><%= link_to 'Edit', edit_conversation_message_path(conversation_message) %></td>
        <td><%= link_to 'Destroy', conversation_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Conversation Message', new_conversation_message_path %>
